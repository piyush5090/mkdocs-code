# Comma-separated list of Pexels API keys. The app will rotate keys and
# automatically cool down a key for 1 hour when a 429 rate limit is hit.
PEXELS_API_KEYS=key1,key2,key3

# Optional: search query for photos. Leave blank to use curated photos.
QUERY=nature

# Pagination and performance tuning
PER_PAGE=80
START_PAGE=1

# Scheduler interval: when no new data is found, sleep for this many minutes
FETCH_INTERVAL_MINUTES=60

# Cooldown duration for a key after 429 (in hours)
COOLDOWN_HOURS=1

